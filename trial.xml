<?xml version="1.0" encoding="UTF-8"?>

<config charset="UTF-8">
	
	<loop item="cr">
		
		<list>
			<tokenize delimiters="&#34;|&#34;">
			<text>
 <var-def name="datestring">
  
        <file action="read" path="addresses.txt"></file>
     
  </var-def>
  </text>
  </tokenize>
     
  </list>
   
  <body>
